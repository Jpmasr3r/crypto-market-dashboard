{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!node_modules",
			"!src/components/ui",
			"!dist",
			"!build",
			"!.next"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 85,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noReactSpecificProps": "off",
				"noExplicitAny": "error",
				"noImplicitAnyLet": "error",
				"noEvolvingTypes": "error"
			},
			"style": {
				"noDefaultExport": "off",
				"useNamingConvention": "off",
				"useComponentExportOnlyModules": "off",
				"useConst": "error",
				"useImportType": "error"
			},
			"correctness": {
				"useImportExtensions": "off"
			},
			"nursery": {
				"useExplicitType": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always",
			"arrowParentheses": "always"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		},
		"globals": []
	},
	"json": {
		"formatter": {
			"indentStyle": "tab",
			"trailingCommas": "none"
		}
	},
	"css": {
		"formatter": {
			"indentStyle": "tab"
		},
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}